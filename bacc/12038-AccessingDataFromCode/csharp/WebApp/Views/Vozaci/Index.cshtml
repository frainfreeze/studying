@model List<vozac>
<div>
    <br />
    <table id="table_id" class="display table">
        <thead>
            <tr>
                <th>Ime</th>
                <th>Prezime</th>
                <th>Br. mobitela</th>
                <th>Br. vozacke</th>
                <th>Uredi</th>
                <th>Obrisi</th>

            </tr>
        </thead>
        <tbody>
            @foreach (vozac v in @Model)
            {
                <tr>
                    <td>@v.ime</td>
                    <td>@v.prezime</td>
                    <td>@v.broj_mobitela</td>
                    <td>@v.broj_vozacke</td>
                    <td><div onclick="window.location.href= '@Url.Action("Vozac", "Vozaci", new { id = v.id })'" class="button is-small is-success">Uredi</div></td>
                    <td>
                        <form name="f" method="post" action="/api/v1/vozac/@v.id">
                            <button type="submit" class="button is-danger is-small">Obrisi</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <br />
    <div onclick="window.location.href= '@Url.Action("DodajVozaca", "Vozaci")'" class="button is-small is-fullwidth is-primary">Dodaj novog vozaca</div>
</div>
<script>
    $(document).ready(function () {
        $('#table_id').DataTable();
    });
</script>