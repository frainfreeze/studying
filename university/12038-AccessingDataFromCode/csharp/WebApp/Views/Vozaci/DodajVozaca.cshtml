@model WebApp.vozac
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <legend>Novi vozac</legend>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="field">
            <label class="label">Ime</label>
            <div class="control">
                @Html.EditorFor(model => model.ime, new { htmlAttributes = new { @class = "input" } })
                @Html.ValidationMessageFor(model => model.ime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="label">Prezime</label>
            <div class="control">
                @Html.EditorFor(model => model.prezime, new { htmlAttributes = new { @class = "input" } })
                @Html.ValidationMessageFor(model => model.prezime, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="label">Broj mobitela</label>
            <div class="control">
                @Html.EditorFor(model => model.broj_mobitela, new { htmlAttributes = new { @class = "input" } })
                @Html.ValidationMessageFor(model => model.broj_mobitela, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="label">Broj vozacke</label>
            <div class="control">
                @Html.EditorFor(model => model.broj_vozacke, new { htmlAttributes = new { @class = "input" } })
                @Html.ValidationMessageFor(model => model.broj_vozacke, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <br />
                <input type="submit" value="Kreiraj" class="button is-small is-primary" />
            </div>
        </div>
    </div>
}
<br />
<div onclick="window.location.href= '@Url.Action("Index", "Vozaci")'" class="button is-small is-primary">Nazad na listu vozaca</div>