        xmlns:local="clr-namespace:WPFWorldCup"
        mc:Ignorable="d"
        Title="Welcome" Height="152.055" Width="351.308" Closing="Window_Closing">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="lbl_chooseLanguage" Content="Choose language/Odaberite jezik" HorizontalAlignment="Left" Margin="32,10,0,0" VerticalAlignment="Top" FontSize="18" Height="44" Width="326"/>
